<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="9dp"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/rasmpolvin"
                android:layout_width="331dp"
                android:layout_height="240dp"
                android:background="@drawable/search_back"
                android:scaleType="centerCrop"
                android:src="@drawable/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/avtor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by Ryan Browne"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />


            <TextView
                android:id="@+id/heading"
                android:layout_width="0dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_height="wrap_content"
                android:text="Crypto investors should be prepared to lose all their money, BOE governor says"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/rasmpolvin"
                android:layout_marginHorizontal="12sp"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toStartOf="@id/rasmpolvin"
                app:layout_constraintTop_toBottomOf="@id/avtor"
                app:layout_constraintVertical_bias="0.02" />

            <TextView
                android:id="@+id/about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="“I’m going to say this very bluntly again,” he added. “Buy them only if you’re prepared to lose all your money.”"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/rasmpolvin"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toStartOf="@id/rasmpolvin"
                app:layout_constraintTop_toBottomOf="@id/heading"
                app:layout_constraintVertical_bias="0.6" />

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>